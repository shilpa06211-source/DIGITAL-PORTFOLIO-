✅ 2️⃣. style.css

/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Animated Background */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #1e3c72, #2a5298);
    background-size: 400% 400%;
    animation: bgShift 20s ease infinite;
    color: #fff;
    padding: 20px;
    min-height: 100vh;
}

@keyframes bgShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

header {
    text-align: center;
    padding: 50px 0;
}

.animated-text {
    font-size: 2.5em;
    animation: fadeIn 2s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

section {
    background: rgba(0, 0, 0, 0.6);
    margin: 20px auto;
    padding: 20px;
    border-radius: 10px;
    max-width: 800px;
    animation: sectionFadeIn 1.5s ease;
}

@keyframes sectionFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

h2 {
    text-align: center;
    margin-bottom: 15px;
    font-size: 2em;
}

ul {
    list-style-type: square;
    padding-left: 20px;
}

.project-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
}

.project-item {
    background: rgba(255, 255, 255, 0.15);
    padding: 20px;
    border-radius: 10px;
    width: 200px;
    text-align: center;
    font-weight: bold;
    transition: transform 0.3s ease;
}

.project-item:hover {
    transform: scale(1.05);
}

footer {
    text-align: center;
    margin-top: 40px;
    font-size: 1em;
}


